user function BatEMerc (_sAlias)

	if empty (_sAlias) .or. _sAlias == 'DA0'
		U_Log2 ('info', '[' + procname () + ']Exportando DA0 completo (DA1 vai no pacote)')
		da0 -> (dbsetorder (1))
		da0 -> (dbgotop ())
		do while ! da0 -> (eof ())
