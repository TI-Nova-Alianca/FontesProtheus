// --------------------------------------------------------------------------
// Gera tabela em formato HTML
METHOD GeraHTM () Class ClsTbUva
	local _sHTM      := ''
//	local _nTotCols  := 25
	local _nGrupo    := 0
	local _aSubgrup  := {}
	local _nSubgrup  := 0
	local _aTitGrup  := {}
	local _aVaried := {}
	local _nVaried   := 0
	local _aLinha  := {}
	local _aAux      := {}
	local _lAdicionou := .F.

	// Como a quantidade de celulas mescladas eh muito grande, achei melhor
	// preparar arrays com os dados (jah eh bastante complicado) e, num
	// passo seguinte, gerar HTML.

	// Passo 1: preparar arrays de dados para o HTML
	if empty (::CodTabela)
		::SomaMsg ("Codigo de tabela nao definido. Impossivel gerar HTML.")
	else

		// Uvas comuns: 4 subcolunas (convenc/bordadura/em conv/organ)
		// Uvas viniferas em espaldeira: 2 subcolunas (para vinho/para espumante)
		// Uvas viniferas latadas: nenhuma subcoluna
		if ::TipoUva == 'C'
			_aSubgrup = {'Convencional', 'Bordadura', 'Em conversão', 'Orgânica'}
		elseif ::TipoUva == 'F' .and. ::Conducao == 'E'
			_aSubGrup = {'Para vinho', 'Para espumante'}
		else
			_aSubGrup = {}
		endif
	//	U_Log2 ('debug', _aSubGrup)

		// Prepara titulos dos grupos
		_aTitGrup = {}
		aadd (_aTitGrup, '<th> </th>')  // Esta coluna vai ser, posteriormente, usada para o grau.
		for _nGrupo = 1 to len (::Grupos)
			aadd (_aTitGrup, '<th colspan=' + cvaltochar (len (_aSubGrup)) + ' align=center>' + ;
			                 'Gr.' + alltrim (::Grupos [_nGrupo, .TbUvaGruposCodigo]) + ;
			                 '-' + alltrim (::Grupos [_nGrupo, .TbUvaGruposDescricao]) + ;
			                 ' (gb ' + cvaltochar (::Grupos [_nGrupo, .TbUvaGruposGrauBase]) + ')' + ;
			                 '</th>')
		next

		// Array com todas as colunas (subgrupos e variedades)
		_aVaried = {}
		_aLinha = {'Grau'}
		for _nGrupo = 1 to len (::Grupos)
			for _nSubgrup = 1 to len (_aSubgrup)
				aadd (_aLinha, _aSubgrup [_nSubgrup])
			next
		next
		aadd (_aVaried, aclone (_aLinha))
		_nVaried = 1
		do while .t.
			U_Log2 ('debug', '[' + procname () + ']_nVaried=' + cvaltochar (_nVaried))
			_aLinha = {' '}  // Primeira coluna vai ser usada pelo grau
			_lAdicionou = .F.
			// Para cada grupo, verifica se ainda tem variedades a adicionar
			for _nGrupo = 1 to len (::Grupos)
				U_Log2 ('debug', '[' + procname () + ']_nGrupo=' + cvaltochar (_nGrupo))
				_aAux = aclone (::Grupos [_nGrupo, .TbUvaGruposListaUvas])
				if _nVaried <= len (_aAux)
					// Variedade base sempre deve existir, independente de tipo/conducao
					if ! empty (_aAux [_nVaried, .TbUvaGruposListaUvasCodBase])
						aadd (_aLinha, alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasCodBase]) + '-' + alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasDescrBase]))
					else
						aadd (_aLinha, ' ')
					endif

					// Estas colunas existem somente para uvas comuns
					if ::TipoUva == 'C'
						if ! empty (_aAux [_nVaried, .TbUvaGruposListaUvasCodBordadura])
							aadd (_aLinha, alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasCodBordadura]) + '-' + alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasDescrBordadura]))
						else
							aadd (_aLinha, ' ')
						endif
						if ! empty (_aAux [_nVaried, .TbUvaGruposListaUvasCodEmConversao])
							aadd (_aLinha, alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasCodEmConversao]) + '-' + alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasDescrEmConversao]))
						else
							aadd (_aLinha, ' ')
						endif
						if ! empty (_aAux [_nVaried, .TbUvaGruposListaUvasCodOrganica])
							aadd (_aLinha, alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasCodOrganica]) + '-' + alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasDescrOrganica]))
						else
							aadd (_aLinha, ' ')
						endif
					endif

					// Esta coluna existe somente para viniferas em espaldeira
					if ::TipoUva == 'F' .and. ::Conducao == 'E'
						if ! empty (_aAux [_nVaried, .TbUvaGruposListaUvasCodParaEspumante])
							aadd (_aLinha, alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasCodParaEspumante]) + '-' + alltrim (_aAux [_nVaried, .TbUvaGruposListaUvasDescrParaEspumante]))
						else
							aadd (_aLinha, ' ')
						endif
					endif
					_lAdicionou = .T.
		//			U_Log2 ('debug', '[' + procname () + ']Adicionei variedades e ficou assim:')
		//			U_Log2 ('debug', _aLinha)
				else
					U_Log2 ('debug', '[' + procname () + ']Este grupo nao tem mais variedades.')
					// Preciso colocar um espaco nestas posicoes para gerar uma celula vazia no HTML depois.
					for _nSubgrup = 1 to len (_aSubgrup)
						aadd (_aLinha, ' ')
					next
		//			U_Log2 ('debug', '[' + procname () + ']Adicionei vazios e ficou assim:')
		//			U_Log2 ('debug', _aLinha)
				endif
			next
			if ! _lAdicionou
				exit
			endif
			aadd (_aVaried, aclone (_aLinha))
			_nVaried ++
		enddo
		U_Log2 ('debug', _aVaried)
		for _nVaried = 1 to len (_aVaried)
			U_Log2 ('debug', '[' + procname () + ']Linha ' + cvaltochar (_nVaried) + ' tam = ' + cvaltochar (len (_aVaried [_nVaried])))
		next
	endif

	// Passo 2: montagem do HTML
	if len (_aVaried) == 0
		::SomaMsg ("Sem variedades para esta tabela. Impossivel gerar HTML.")
	else
		// dicas em https://www.w3schools.com/css/css_text_align.asp

		_sHTM := '<!DOCTYPE html><html><head><meta charset="1252"/><title>Tabela uva safra</title></head><body>'
		_sHTM += '<table width="80%" border="1" cellspacing="0" cellpadding="0" align="center">'
		
		// Linhas iniciais da tabela (descricao, tipos de uvas, datas, etc.
		_sHTM += '<tr>'
		_sHTM +=    '<th colspan=' + cvaltochar (len (_aVaried [1])) + ' align=left>' + alltrim (sm0 -> m0_nomecom) + '</th>'
		_sHTM += '</tr>'
		_sHTM += '<tr>'
			_sHTM +=    '<th colspan=' + cvaltochar (len (_aVaried [1])) + ' align=left>Tabela ' + ::CodTabela + ' (preço '
			if ::TipoPreco == 'E'
				_sHTM += 'de entrada'
			elseif ::TipoPreco == 'C'
				_sHTM += 'de compra'
			elseif ::TipoPreco == 'C'
				_sHTM += 'MOC'
			else
				_sHTM += '[OUTRAS NAO DEFINIDAS]'
			endif
			_sHTM += ')'
			_sHTM += ' - uvas ' + iif (::TipoUva == 'C', 'comuns', iif (::TipoUva == 'F', 'viniferas', '(SEM DEFINICAO)'))
			_sHTM += ' ' + iif (::Conducao == 'L', 'latadas', iif (::Conducao == 'E', 'espaldeira', '(SEM DEFINICAO)'))
			_sHTM += ' - safra ' + ::Safra + '</th>'
		_sHTM += '</tr>'
		_sHTM += '<tr>'
		_sHTM +=    '<th colspan=' + cvaltochar (len (_aVaried [1])) + ' align=left>Gerada em ' + dtoc (date ()) + ' - ' + time () + '</th>'
		_sHTM += '</tr>'


		// Linhas de titulos das colunas (nomes dos grupos, grau base, etc)
		U_Log2 ('debug', '[' + procname () + ']Montando linha titulos grupos')
		_sHTM += '<tr>'
		for _nGrupo = 1 to len (_aTitGrup)
			_sHTM += _aTitGrup [_nGrupo]
		next
		_sHTM += '</tr>'

		// Adiciona as variedades ao grid
		for _nVaried = 1 to len (_aVaried)
			_sHTM += '<tr>'
			for _nGrupo = 1 to len (_aVaried [_nVaried])
				_sHTM += '<th>' + _aVaried [_nVaried, _nGrupo] + '</th>'
			next
			_sHTM += '</tr>
		next

		_sHTM += '</table>'
		_sHTM += '</body></html>'
	endif
return _sHTM


// --------------------------------------------------------------------------
// Adiciona (sempre no inicio, para que a mensagem mais recente seja vista
// antes) uma mensagem na string ::UltMsg
METHOD SomaMsg (_sMsg) Class ClsTbUva
	local _sMsgAux := alltrim (cvaltochar (_sMsg))
